<odoo>
    <data>
        <!-- Inherit quotation report (from module sale) -->
        <template id="autopart_report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <!-- Insert the columns into header -->
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[1]" position="after">
                <th>Merk Part</th>
                <th>Kendaraan</th>
            </xpath>
            <!-- Insert the columns into the table -->
            <xpath expr="//tbody[@class='sale_tbody']//t//t[2]//tr//td[1]" position="after">
                <td><span t-field="l.autopart_brand_id"/></td>
                <td><span t-field="l.autopart_vehiclemodel_id"/></td>
            </xpath>
        </template>

        <!-- Inherit invoice report (from module sale) -->
        <template id="autopart_report_invoice_document" inherit_id="account.report_invoice_document">
            <!-- Insert the columns into header -->
            <xpath expr="//table[@class='table table-condensed']//thead//tr//th[1]" position="after">
                <th>Merk Part</th>
                <th>Kendaraan</th>
            </xpath>
            <!-- Insert the columns into the table -->
            <xpath expr="//tbody[@class='invoice_tbody']//tr//td[1]" position="after">
                <td><span t-field="l.autopart_brand_id"/></td>
                <td><span t-field="l.autopart_vehiclemodel_id"/></td>
            </xpath>
        </template>
    </data>
</odoo>