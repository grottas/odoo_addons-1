<odoo>
    <data>
        <act_window
            id="autopart_brand_action"
            name="Part"
            res_model="autopart.brand"
        />
        <act_window
            id="autopart_vehiclebrand_action"
            name="Merk Kendaraan"
            res_model="autopart.vehiclebrand"
        />
        <act_window
            id="autopart_vehiclemodel_action"
            name="Model Kendaraan"
            res_model="autopart.vehiclemodel"
        />

        <menuitem
            id="autopart_spec_menu"
            name="Spare Part"
            parent=""
            sequence="4"
        />
        <menuitem
            id="autopart_brand_menu"
            name="Merk Part"
            action="autopart_brand_action"
            parent="autopart_spec_menu"
            sequence="5"
        />
        <menuitem
            id="autopart_vehiclebrand_menu"
            name="Merk Kendaraan"
            action="autopart_vehiclebrand_action"
            parent="autopart_spec_menu"
            sequence="6"
        />
        <menuitem
            id="autopart_vehiclemodel_menu"
            name="Model Kendaraan"
            action="autopart_vehiclemodel_action"
            parent="autopart_spec_menu"
            sequence="6"
        />

        <!-- Merk Spare Part -->
        <!-- Add Form View -->
        <record model="ir.ui.view" id="autopart_brand_view_form">
            <field name="name">Form Merk Part</field>
            <field name="model">autopart.brand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" placeholder="Misal: Bosch"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Add Tree View -->
        <record model="ir.ui.view" id="autopart_brand_view_tree">
            <field name="name">Daftar Merk Part</field>
            <field name="model">autopart.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- Add Search View -->
        <record model="ir.ui.view" id="autopart_brand_view_search">
            <field name="name">Pencarian Merk Part</field>
            <field name="model">autopart.brand</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Merk Kendaraan -->
        <record model="ir.ui.view" id="autopart_vehiclebrand_view_form">
            <field name="name">Form Merk Kendaraan</field>
            <field name="model">autopart.vehiclebrand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" placeholder="Misal: Yaris 2006-2013"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Add Tree View -->
        <record model="ir.ui.view" id="autopart_vehiclebrand_view_tree">
            <field name="name">Daftar Merk Kendaraan</field>
            <field name="model">autopart.vehiclebrand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- Add Search View -->
        <record model="ir.ui.view" id="autopart_vehiclebrand_view_search">
            <field name="name">Pencarian Merk Kendaraan</field>
            <field name="model">autopart.vehiclebrand</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Model Kendaraan -->
        <record model="ir.ui.view" id="autopart_vehiclemodel_view_form">
            <field name="name">Form Model Kendaraan</field>
            <field name="model">autopart.vehiclemodel</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="vehiclebrand_id"/>
                            <field name="name" placeholder="Misal: Yaris 2006-2013"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Add Tree View -->
        <record model="ir.ui.view" id="autopart_vehiclemodel_view_tree">
            <field name="name">Daftar Model Kendaraan</field>
            <field name="model">autopart.vehiclemodel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="vehiclebrand_id"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- Add Search View -->
        <record model="ir.ui.view" id="autopart_vehiclemodel_view_search">
            <field name="name">Pencarian Model Kendaraan</field>
            <field name="model">autopart.vehiclemodel</field>
            <field name="arch" type="xml">
                <search>
                    <field name="vehiclebrand_id"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Product View -->
        <record model="ir.ui.view" id="product_brand_view_form">
            <field name="name">product brand view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='categ_id']" position="after">          
                    <field name="autopart_brand_id" help="Merk part adalah merk pembuat part."/>
                    <field name="autopart_vehiclebrand_id" help="Merk kendaraan yang kompatibel dengan produk ini."/>
                    <field name="autopart_vehiclemodel_id" help="Model kendaraan yang kompatibel dengan produk ini."/>
                    <!-- <field name="autopart_vehiclemodel_year" help="Tahun pembuatan model kendaraan yang kompatibel dengan produk ini."/> -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>