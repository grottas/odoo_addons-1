                    <field name="autopart_part_number" help="Nomor part produk ini."/>
                    <!-- <field name="autopart_vehicletype_id" help="Model kendaraan yang kompatibel dengan produk ini."/> -->
                    <field name="autopart_vehicletype_ids"/>
