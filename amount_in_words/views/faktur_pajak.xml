<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="amount_in_words.faktur_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <div t-field="company.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                            style="border-bottom: 1px solid black;"/>
                    </div>
                    <div class="col-xs-5 col-xs-offset-7">
                        <address t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        <span t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></span>
                    </div>
                </div>
            </div>
            <t t-raw="0" />
            <t t-call="report.external_layout_footer" />
        </template>

        <template id="report_faktur_pajak_document">
            <t t-call="amount_in_words.faktur_layout">
                <div class="page">
                    <h2>Report title</h2>
                    <p>This object's name is <span t-field="o.name"/></p>
                </div>
            </t>
        </template>

        <template id="report_faktur_pajak">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'amount_in_words.report_faktur_pajak_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
